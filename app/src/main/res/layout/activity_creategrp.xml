<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Creategrp"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="702dp"
        android:alpha="0.8"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:src="@drawable/logo"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="170dp"
        android:gravity="center"
        android:text="Create Group Here"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="279dp"
        android:gravity="center"
        android:text="Group Name"
        android:textColor="#000000"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/grpname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="44dp"
        android:hint="Enter Group Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="373dp"
        android:gravity="center"
        android:text="@string/Application"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp" />

    <Spinner
        android:popupBackground="@drawable/list_background"
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="365dp"
        android:layout_marginEnd="44dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="475dp"
        android:gravity="center"
        android:text="@string/Spaces"
        android:textColor="#000000"
        android:textSize="25dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="468dp"
        android:layout_marginEnd="44dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="700dp"
        android:background="@drawable/bg_options"
        android:text="Create"
        android:textSize="15dp"/>

</RelativeLayout>